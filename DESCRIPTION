Package: mulgar
Title: Functions for Pre-Processing Data for Multivariate Data Visualisation using Tours
Version: 1.0.1.9000
Authors@R: c(
    person("Dianne", "Cook",
           role = c("aut", "cre"),
           email = "dicook@monash.edu",
           comment = c(ORCID = "0000-0002-3813-7155")),
